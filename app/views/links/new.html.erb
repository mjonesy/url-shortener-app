<div class='container'>
  <h3>Add a New Link</h3>

  <%= form_tag '/links', method: :post do %>

    <div class='form-group'>
      <%= text_field_tag :slug, "", :placeholder => "Slug" %>
    </div>

    <div class='form-group'>
      <%= text_field_tag :target_url, "", :placeholder => "Target URL" %>
    </div>

    <div>
      <%= submit_tag 'Create Link', class: "btn btn-default" %>
    </div>  

  <% end %>
</div>